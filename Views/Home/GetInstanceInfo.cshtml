@{
    ViewData["Title"] = "Instance Information";
}

<h2>Instance Information</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <table class="table table-bordered">
                <tr>
                    <th>Instance ID</th>
                    <td>@ViewBag.InstanceId</td>
                </tr>
                <tr>
                    <th>Availability Zone</th>
                    <td>@ViewBag.AvailabilityZone</td>
                </tr>
                <tr>
                    <th>Region</th>
                    <td>@ViewBag.Region</td>
                </tr>
            </table>
        </div>
    </div>
</div>

    
